<!DOCTYPE html>
<html>
<head>
  <%= title_tag %>
  <meta name="viewport" content="width=500">
  <link href="/news.xml" rel="alternate" title="Ruby Together News" type="application/atom+xml">
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "https://checkout.stripe.com/checkout.js", async: true %>
  <%= javascript_include_tag "application", async: true %>
  <%= render "favicons" %>
  <%= stripe_meta_tag %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <section style="clear: both;">
      <%- if content_for?(:header) -%>
        <%= content_for :header %>
      <%- else -%>
          <%= link_to image_tag("rubies.png", width: "200"), "/" %>
          <%= content_tag :h1, title || "Ruby Together" %>
      <%- end -%>
    </section>
  </header>
  <%= render partial: "flashes" %>

  <section class="content">
    <%= yield %>
  </section>

  <footer>
    <%= render "footer" %>
  </footer>

  <img class="spinner" src="/images/rubies.png" width="100" style="display: none;">
  <%= stylesheet_link_tag "campton", media: "all" %>
  <%= content_for(:script) if content_for?(:script) %>
  <%= render "google_analytics" if Rails.env.production? %>
  <%= render "intercom" %>
</body>
</html>
